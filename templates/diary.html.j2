{% extends "template.html.j2" %}
{% block content %}
    <dl>
        {% for dt, entries in diary.items() %}
            <dt><a href="{{ entries[0]['link'] }}">{{ dt }}</a></dt>
            <dd>
                <ol id="diaryentry">
                    {% for entry in entries %}
                        {% if entry["images"] != [] %}
                            <ul>
                                {% for img in entry["images"] %}
                                    <li><a href="{{ img }}" target='_blank'><img src="{{ img }}"></a></li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                        <li>
                            <p>{{ entry["text"] }}</p>
                        </li>
                    {% endfor %}
                </ol>
            </dd>
        {% endfor %}
    </dl>
{% endblock %}